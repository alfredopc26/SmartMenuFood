<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/update_data_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UpdateDataActivity">

        <TextView
            android:id="@+id/update_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizando datos..."
            android:textSize="24sp"
            android:layout_centerInParent="true" />

        <ProgressBar
            android:id="@+id/update_data_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_data_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>