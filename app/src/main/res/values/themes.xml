        <item name="colorPrimary">@color/primary_sm</item>
        <item name="colorPrimaryVariant">@color/variantsm</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rosybrown</item>
        <item name="colorSecondaryVariant">@color/rosybrown</item>
        <item name="colorOnSecondary">@color/black</item>
